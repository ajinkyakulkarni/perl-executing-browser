use strict;
use Term::ANSIColor;
use Syntax::Highlight::Engine::Kate;

my $language;
my $input_file = $ARGV[1];

# Command line arguments:
foreach my $command_line_argument (@ARGV){
	(my $command_line_flag, my $command_line_value)=split(/\=/,$command_line_argument);
	if ($command_line_flag =~ "--language" or $command_line_flag =~ "-L"){
		$language = $command_line_value;
	}
}

 my $hl = new Syntax::Highlight::Engine::Kate(
    language => $language,
    substitutions => {
       "<" => "&lt;",
       ">" => "&gt;",
       "&" => "&amp;",
       " " => "&nbsp;",
       "\t" => "&nbsp;&nbsp;&nbsp;",
       "\n" => "<BR>\n",
    },
    format_table => {
       Alert => ["<font color=\"#0000ff\">", "</font>"],
       BaseN => ["<font color=\"#007f00\">", "</font>"],
       BString => ["<font color=\"#c9a7ff\">", "</font>"],
       Char => ["<font color=\"#ff00ff\">", "</font>"],
       Comment => ["<font color=\"#7f7f7f\"><i>", "</i></font>"],
       DataType => ["<font color=\"#0000ff\">", "</font>"],
       DecVal => ["<font color=\"#00007f\">", "</font>"],
       Error => ["<font color=\"#ff0000\"><b><i>", "</i></b></font>"],
       Float => ["<font color=\"#00007f\">", "</font>"],
       Function => ["<font color=\"#007f00\">", "</font>"],
       IString => ["<font color=\"#ff0000\">", ""],
       Keyword => ["<b>", "</b>"],
       Normal => ["", ""],
       Operator => ["<font color=\"#ffa500\">", "</font>"],
       Others => ["<font color=\"#b03060\">", "</font>"],
       RegionMarker => ["<font color=\"#96b9ff\"><i>", "</i></font>"],
       Reserved => ["<font color=\"#9b30ff\"><b>", "</b></font>"],
       String => ["<font color=\"#ff0000\">", "</font>"],
       Variable => ["<font color=\"#0000ff\"><b>", "</b></font>"],
       Warning => ["<font color=\"#0000ff\"><b><i>", "</b></i></font>"],
    },
 );

my $line_number;

# Open file for reading:
my $input_filehandle;
open ($input_filehandle, "<", "$input_file");

print "<html>\n<head>\n</head>\n<body>\n";
while (my $in = <$input_filehandle>) {
	$line_number++;
	print "<a name='line$line_number' href='#line$line_number'>$line_number</a> &nbsp;";
	print $hl->highlightText($in);
}

print "</body>\n</html>\n";

close ($input_filehandle);
